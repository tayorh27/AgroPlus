<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/image_dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            app:bootstrapSize="xs" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/image_dp"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:bootstrapBrand="regular"
            app:bootstrapText="Gisanrin Adetayo" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/image_dp"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:bootstrapBrand="regular"
            app:bootstrapText="University of Lagos" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:padding="6dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:bootstrapBrand="success"
            app:bootstrapText="â‚¦2000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/relative1">

        <ImageView
            android:id="@+id/full_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#ccc" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:padding="5dp"
            app:bootstrapBrand="success"
            app:bootstrapSize="md"
            app:bootstrapText="Category"
            app:roundedCorners="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_refresh_white_36px"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative2"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_call_black_24px" />

        <ImageView
            android:id="@+id/btn_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_call"
            android:padding="8dp"
            android:src="@drawable/ic_email_black_24px" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_email"
            android:padding="8dp"
            android:src="@drawable/ic_share_black_18px" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:textSize="15sp"
            app:bootstrapBrand="regular"
            app:bootstrapText="4mins ago" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_call"
            android:background="@color/bootstrap_gray_light" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:textSize="15sp"
            app:bootstrapBrand="regular"
            app:bootstrapText="This is Gisanrin Adetayo and he loves mariam soooo damn much." />

    </RelativeLayout>

</RelativeLayout>